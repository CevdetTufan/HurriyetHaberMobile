<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HurriyetHaberMobile.Views.Detail"
             xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView">
    
    <ContentPage.Content>
 
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".1*"></RowDefinition>
                <RowDefinition Height=".5*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="lblTitle"></Label>
            
            <cv:CarouselView Grid.Row="1" x:Name="cvImages" ItemsSource="{Binding .}">
                <cv:CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding FileUrl}"></Image>

                    </DataTemplate>
                </cv:CarouselView.ItemTemplate>
            </cv:CarouselView>
            
            <Label Grid.Row="2" x:Name="lblDescription"></Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>